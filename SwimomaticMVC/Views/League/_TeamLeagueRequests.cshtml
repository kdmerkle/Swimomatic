@using SwimomaticMVC.Models;
@model List<ViewTeam> 
@if (Model.Count > 0)
{           
    <div>
        <h5>
            Team Requests</h5>
        <table width="75%" class="data-table">
            <tr>
                <th>
                    Team Name (Abbrev)
                </th>
                <th>
                    Home Location
                </th>
                <th>
                    &nbsp;
                </th>
            </tr>
            @foreach (ViewTeam vt in Model)
            {
                <tr>
                    <td>
                        @(vt.TeamNameAbbrev)
                    </td>
                    <td>
                        @(vt.LocationName)
                    </td>
                    <td>
                        <a href="javascript:void(0);" id="lnkAddTeam" onclick="javascript:ApproveRequest(@(vt.TeamLeagueRequestID),@(vt.SeasonID));">
                            Approve</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
