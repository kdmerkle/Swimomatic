@using Helpers;
<!DOCTYPE html>
<html>
<head>
    <meta name="description" content="The only web-based swim meet manager!." />
    <meta name="keywords" content="swimomatic,swim meet,heat sheet,web based,free,online." />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")" />
    <link href="@Url.Content("~/Content/jquery-ui-1.8.2.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" media="all" />
    <script src="https://www.google.com/jsapi?key=ABQIAAAAlioK6w6s3Ave-JsowOfuNhQNtTBiYNDOeVRCYJdHVzO3spqhzhS9N2w0sJitWROGKB7zlaMZRz7y-w"
        type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js"
        type="text/javascript"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/json2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ExControl.js")" type="text/javascript"></script>
    @RenderSection("script", false)
</head>
<body>
    <div class="page">
        <div class="header-container">
            <div class="nav-login">
                <ul>
                    <li class="first">
                        @Html.Partial("_LogOnPartial") </li>
                </ul>
            </div>
            <div class="logo">
                <a href="@Url.Action("Index", "Home") ">Swimomatic</a>
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="poster-container-no-image">
            <div class="poster-inner">
            </div>
        </div>
        <div class="nav-main">
            <ul>
                @if (Html.IsCurrentAction("Index", "Home"))
                { 
                    <li class="first active"><span class="active"></span>
                        @Html.ActionLink("Home", "Index", "Home") </li>
                }
                else
                { 
                    <li class="first">
                        @Html.ActionLink("Home", "Index", "Home") </li>
                }
                @if (Html.IsCurrentAction("About", "Home"))
                { 
                    <li class="active"><span class="active"></span>
                        @Html.ActionLink("About", "About", "Home") </li>
                }
                else
                { 
                    <li>
                        @Html.ActionLink("About", "About", "Home") </li>
                }
                @if (Html.IsCurrentAction("Index", "SwimMeet"))
                { 
                    <li class="active"><span class="active"></span>
                        @Html.ActionLink("Swim Meets", "Index", "SwimMeet") </li>
                }
                else
                { 
                    <li>
                        @Html.ActionLink("Swim Meets", "Index", "SwimMeet") </li>
                }
                @if (Html.IsCurrentAction("Index", "Swimmer"))
                { 
                    <li class="active"><span class="active"></span>
                        @Html.ActionLink("Swimmers", "Index", "Swimmer") </li>
                }
                else
                { 
                    <li>
                        @Html.ActionLink("Swimmers", "Index", "Swimmer") </li>
                }
                @if (Html.IsCurrentAction("Index", "Team"))
                { 
                    <li class="active"><span class="active"></span>
                        @Html.ActionLink("Teams", "Index", "Team") </li>
                }
                else
                { 
                    <li>
                        @Html.ActionLink("Teams", "Index", "Team") </li>
                }
                @if (Html.IsCurrentAction("Index", "League"))
                { 
                    <li class="active"><span class="active"></span>
                        @Html.ActionLink("Leagues", "Index", "League") </li>
                }
                else
                { 
                    <li>
                        @Html.ActionLink("Leagues", "Index", "League") </li>
                }
            </ul>
        </div>
        <div class="content-container">
            <div class="content-container-inner">
                <div class="content-main">
                    <div class="breadcrumb">
                        @Html.ActionLink("Home", "Index", "Home")
                        &raquo; @ViewBag.Title</div>
                    @RenderBody()
                </div>
                <div class="content-left">
                    <img src="@Url.Content("~/Content/images/photo-small-01.jpg")" width="180" height="108" alt="" style="margin-bottom: 15px;" />
                    <div class="side-bucket nav">
                        @RenderSection("SideNav", false)
                    </div>
                </div>
                <div class="content-right">
                    <div class="ads">
                        <a href="#">
                            <img src="@Url.Content("~/Content/images/ad.gif")" alt="ad" />
                        </a>
                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="nav-footer">
                <ul>
                    <li class="first">
                        @Html.ActionLink("Home", "Index", "Home") </li>
                    <li>
                        @Html.ActionLink("About", "About", "Home") </li>
                </ul>
                <p class="copyright">
                    &copy; @DateTime.Now.Date.Year Swimomatic</p>
            </div>
        </div>
    </div>
</body>
</html>
